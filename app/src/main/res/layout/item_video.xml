<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingStart="0dp"
    android:paddingTop="5dp"
    android:paddingEnd="8dp"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:id="@+id/relative_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/frame_item"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorWhite"
            android:background="@color/colorWhiteTransparentItem"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_playlist_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/background_gradient_transparent"
                android:visibility="gone"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/imgItemHeaderSelection"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/background_square"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>